@page
@model NanoPingPong.Web.Pages.IndexModel

<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet">
<script src="https://kit.fontawesome.com/c6fcb894f6.js" crossorigin="anonymous"></script>

<title>@Model.Context.Protocol Demo :: Ping/Pong</title>
<link rel="icon" type="image/x-icon" href="favicon.ico" />

<style type="text/css">
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    font: 13px/19px "Open Sans", Arial, sans-serif;

    --bg: #EBEBEB;
    --black: #333333;
    --prog: #A4B7BE;
  }


  body {
    background: var(--bg);
    color: var(--black);
  }

  .content {
    width: 80%;
    max-width: 275px;
    min-height: 550px;
    margin: 2rem auto;
    padding: 3rem 1.25rem;
    background: var(--bg);
    box-shadow: 20px 20px 60px #c8c8c8, 
                -20px -20px 60px #ffffff;
    border-radius: 15px;
    border: 1px solid rgb(223, 223, 223);
    position: relative;
    display: table;
  }
  .content::before {
    content: '';
    display: block;
    background: #333;
    width: 100px;
    height: 20px;
    border-radius: 0 0 50% 50%; 
    position: absolute;
    top: 0;
    left: 87px;
  }

  .centered {
    display: table-cell;
    text-align: center;
    vertical-align: middle;
    font-weight: 600;
  }

  .centered p {
    margin-bottom: 10px;
  }

  .centered p.donations {
    margin-top: 20px;
  }

  img {
    border-radius: 10px;
  }

  .bar {
    width: 50%;
    height: 2px;
    margin: auto;
    background: var(--prog);
    border-radius: 25px;
    position: absolute;
    left: 25%;
    bottom: 1rem;
  }

  .credit {
    @if (Model.Context.Banano)
    {
      <text>
      background: rgb(155,196,62);
      background: linear-gradient(90deg, rgba(155,196,62,1) 0%, rgba(247,255,48,1) 35%, rgba(247,255,48,1) 65%, rgba(128,74,21,1) 100%);
      </text>
    }
    else // Nano
    {
      <text>
      background: rgb(32,32,76);
      background: linear-gradient(90deg, rgba(32,32,76,1) 0%, rgba(32,156,233,1) 35%, rgba(244,250,255,1) 100%);
      </text>
    }
    color: var(--black);
    padding: 1rem 0;
    text-align: center;
  }

</style>
  
</head>
<body>

  <main class="content">
    <div class="centered">
      <p>See the speed of @Model.Context.Protocol with this live ping-pong demonstration.</p>
      <p>Send a small transaction to the address below and watch it returned to you in real-time.</p>
      <p>
        <a href="@Model.Context.Link">
          <img src="/QR/Address" />
          <br>Tap to open @(Model.Context.Banano ? "Kalium" : "Natrium")
        </a>
      </p>

      @if (Model.Context.DonationAddress != null)
      {
        <p class="donations">
          <small>
            Donations for running this service are accepted here:
            <a href="@Model.Context.DonationLink">
              <br><img src="/QR/Donations" />
              <br>Tap to open @(Model.Context.Banano ? "Kalium" : "Natrium")
            </a>
          </small>
        </p>   
      }
    </div>
    <div class="bar"></div>
  </main>
  
  <section class="credit">
    <p>
        @if (Model.Context.Banano) {
            <a href="https://kalium.banano.cc/">[Kalium Wallet]</a>
            <a href="https://banano.cc">[More about Banano]</a>
        }
        else // Nano
        {
            <a href="https://natrium.io/">[Natrium Wallet]</a>
            <a href="https://nano.org">[More about Nano]</a>
        }
        <a href="https://codepen.io/TutulDevs/pen/eYZJmBL">[Design Credit]</a>
    </p>
  </section>
  
